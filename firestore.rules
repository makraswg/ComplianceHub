rules_version = '2';

// Deployment trigger: 2026-02-02T22:45:00Z - Stabilizing collection group queries

service cloud.firestore {
  match /databases/{database}/documents {
    
    // helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isTenantMember(tenantId) {
      return isSignedIn() && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));
    }

    // COLLECTION GROUP RULES
    // Mandatory for cross-tenant tenant membership lookups on the login page
    match /{path=**}/members/{uid} {
      allow list: if isSignedIn() && (request.auth.uid == uid || request.auth.uid == resource.data.userId);
      allow get: if isSignedIn() && request.auth.uid == uid;
    }

    // TENANT RULES
    match /tenants/{tenantId} {
      allow read: if isTenantMember(tenantId);
      
      match /members/{uid} {
        allow read: if isSignedIn() && (request.auth.uid == uid || isTenantMember(tenantId));
        allow write: if isTenantMember(tenantId);
      }
      
      match /users/{userId} {
        allow read, write: if isTenantMember(tenantId);
      }
      
      match /resources/{resourceId} {
        allow read, write: if isTenantMember(tenantId);
      }
      
      match /entitlements/{entitlementId} {
        allow read, write: if isTenantMember(tenantId);
      }
      
      match /assignments/{assignmentId} {
        allow read, write: if isTenantMember(tenantId);
      }
      
      match /auditEvents/{eventId} {
        allow read: if isTenantMember(tenantId);
        allow create: if isTenantMember(tenantId);
      }
    }

    // PLATFORM RULES
    match /platformUsers/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
    }
    
    // GLOBAL DEFAULT
    match /{document=**} {
      allow read, write: if false; // Deny by default, use specific rules above
    }
  }
}